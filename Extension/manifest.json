{
    "manifest_version": 2,
    "version": "1.0.0",
    "name": "SafeBrowse.AI",
    "description": "Detects phishing website URLs",
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "activeTab"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "icons": {
        "16": "public/icon.png",
        "32": "public/icon.png",
        "48": "public/icon.png",
        "128": "public/icon.png"   
    },
    "browser_action":{
        "default_icon": "public/icon.png"
    }
}